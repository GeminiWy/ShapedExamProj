<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/common_crash_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="10dip"
            android:textColor="@color/black"
            android:textSize="20sp" 
            android:text="@string/crash_dialog_title"/>

        <TextView
            android:id="@+id/common_crash_dialog_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dp"
            android:textColor="#757675"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center" >

        <Button
            android:id="@+id/common_crash_dialog_exit_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="-1dp"
            android:layout_weight="1"
            android:background="@drawable/crash_button_selector"
            android:gravity="center"
            android:text="@string/crash_dialog_exit_text"
            android:textColor="#23bd8b"
            android:textSize="16sp" />

        <Button
            android:id="@+id/common_crash_dialog_restart_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="-1dp"
            android:layout_weight="1"
            android:background="@drawable/crash_button_selector"
            android:gravity="center"
            android:text="@string/crash_dialog_restart_text"
            android:textColor="#23bd8b"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>