<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_head_layout_1"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <!-- 绑定手机号 -->
            <RelativeLayout 
                android:id="@+id/setting_bind_phone_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_72px"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_item_bg"
                android:visibility="gone">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="@string/binding_phone"/>
                <Button
                    android:id="@+id/setting_bind_phone_btn"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:paddingLeft="10dp"
			        android:paddingRight="15dp"
			        android:layout_alignParentRight="true"
					android:drawableRight="@drawable/list_arrowright_selector"
					android:text="@string/unbind"
					android:textSize="15dp"
					android:textAlignment="viewEnd"
					android:textColor="@color/title_green"
					android:background="@null"
			        android:clickable="true"/>
            </RelativeLayout>
             <!-- 非wifi时进行提醒 -->
            <RelativeLayout 
                android:id="@+id/setting_wifi_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_72px"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_item_bg">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="@string/non_wifi"/>
                <ImageView
                    android:id="@+id/setting_wifi_img"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:paddingLeft="10dp"
			        android:paddingRight="10dp"
			        android:layout_alignParentRight="true"
					android:text=""
					android:textAlignment="viewEnd"
					android:textColor="@color/title_green"
					android:src="@drawable/setting_check_select"
			        android:clickable="true"/>
            </RelativeLayout>
             <!-- 通知栏提示 -->
            <LinearLayout 
                android:id="@+id/setting_notification_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_item_bg">
	            <RelativeLayout 
	                android:id="@+id/setting_all_notification_rl"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/_72px"
	                android:background="@color/transparent">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/notify_bar"/>
	                <!-- 默认开启 -->
	                <ImageView
	                    android:id="@+id/setting_notification_img"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingLeft="10dp"
				        android:paddingRight="10dp"
				        android:layout_alignParentRight="true"
						android:text=""
						android:textColor="@color/title_green"
						android:src="@drawable/setting_check_select"/>
	            </RelativeLayout>
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="0.3dp"
	                android:visibility="gone"
	                android:background="@color/h_line_bg"/>
	             <!-- 提醒 -->
	            <RelativeLayout 
	                android:id="@+id/setting_remind_rl"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/_72px"
	                android:visibility="gone">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/notify"/>
	                <CheckBox
	                    android:id="@+id/setting_remind_cb"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingRight="10dp"
				        android:layout_alignParentRight="true"
						android:text=""
						style="@style/CustomCheckboxTheme"/>
	            </RelativeLayout>
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="0.3dp"
	                android:visibility="gone"
	                android:background="@color/h_line_bg"/>
	             <!-- 系统公告 -->
	            <RelativeLayout 
	                android:id="@+id/setting_sys_annouce_rl"
	                android:layout_width="match_parent"
	                android:visibility="gone"
	                android:layout_height="@dimen/_72px">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/sys_annouce"/>
	                <CheckBox
	                    android:id="@+id/setting_sys_annouce_cb"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingRight="10dp"
				        android:layout_alignParentRight="true"
						android:text=""
						style="@style/CustomCheckboxTheme"/>
	            </RelativeLayout>
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="0.3dp"
	                android:background="@color/h_line_bg"/>
	             <!-- 群聊 -->
	            <RelativeLayout 
	                android:id="@+id/setting_group_talk_rl"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/_72px" android:visibility="gone">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/group_talk"/>
	                <CheckBox
	                    android:id="@+id/setting_group_talk_cb"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingRight="10dp"
				        android:layout_alignParentRight="true"
						android:text=""
						style="@style/CustomCheckboxTheme"/>
	            </RelativeLayout>
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="0.3dp"
	                android:background="@color/h_line_bg"/>
	             <!-- 私聊 -->
	            <RelativeLayout 
	                android:id="@+id/setting_personal_talk_rl"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/_72px" android:visibility="gone">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/personal_talk"/>
	                <CheckBox
	                    android:id="@+id/setting_personal_talk_cb"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingRight="10dp"
				        android:layout_alignParentRight="true"
						android:text=""
						style="@style/CustomCheckboxTheme"/>
	            </RelativeLayout>
	            
            </LinearLayout>
           <!-- 黑名单 -->
           <RelativeLayout 
               android:id="@+id/setting_black_list_rl"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_72px"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:visibility="gone"
               android:background="@drawable/white_item_bg">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:textSize="18dp"
                   android:text="@string/black_list"/>
               <Button
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:paddingLeft="10dp"
			        android:paddingRight="15dp"
			        android:layout_alignParentRight="true"
					android:drawableRight="@drawable/list_arrowright_selector"
					android:text=""
					android:textColor="@color/title_green"
					android:background="@null"/>
           </RelativeLayout>
           <!-- 清楚系统缓存 -->
           <RelativeLayout 
               android:id="@+id/setting_clear_cache_rl"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_72px"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:background="@drawable/white_item_bg">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:textSize="18dp"
                   android:text="@string/clear_cache"/>
               <!-- <Button
			        android:layout_width="wrap_content"
			        android:layout_height="30dp"
			        android:paddingLeft="10dp"
			        android:paddingRight="10dp"
			        android:layout_marginRight="10dp"
			        android:layout_centerInParent="true"
			        android:layout_alignParentRight="true"
					android:text="@string/clear"
					android:textSize="15dp"
					android:textColor="@color/white"
					android:background="@drawable/common_btn_selector"/> -->
               <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/setting_page_text_frame"
                    android:padding="1dip" >

                    <ProgressBar
                        android:id="@+id/settings_progressBar"
                        android:layout_width="60dip"
                        android:layout_height="25dip"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:indeterminate="false"
                        android:indeterminateOnly="false"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/settings_progress_bar"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/settings_progress_tv"
                        android:layout_width="60dip"
                        android:layout_height="25dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0B"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </FrameLayout>
           </RelativeLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_item_bg">
               <!-- 版本更新 -->
	            <RelativeLayout 
	                android:id="@+id/setting_version_update_rl"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/_72px"
	                android:background="@color/transparent">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/version_update"/>
	                <TextView
	                    android:id="@+id/setting_version_update_tv"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingRight="15dp"
				        android:textSize="14dp"
				        android:gravity="center_vertical"
				        android:layout_alignParentRight="true"
						android:text="@string/already_latest"
						android:textColor="@color/title_green"
						android:background="@null"/>
	            </RelativeLayout>
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="0.3dp"
	                android:background="@color/h_line_bg"/>
	             <!-- 使用帮助 -->
	            <RelativeLayout 
	                android:id="@+id/setting_help_rl"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/_72px">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/uesr_helper"/>
	                <Button
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingLeft="10dp"
				        android:paddingRight="15dp"
				        android:layout_alignParentRight="true"
						android:drawableRight="@drawable/list_arrowright_selector"
						android:text=""
						android:textColor="@color/title_green"
						android:background="@null"/>
	            </RelativeLayout>
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="0.3dp"
	                android:background="@color/h_line_bg"/>
	             <!-- 关于开大 -->
	            <RelativeLayout 
	                android:id="@+id/setting_about_rl"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/_72px">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/about_OU"/>
	                <Button
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingLeft="10dp"
				        android:paddingRight="15dp"
				        android:layout_alignParentRight="true"
						android:drawableRight="@drawable/list_arrowright_selector"
						android:text=""
						android:textColor="@color/title_green"
						android:background="@null"/>
	            </RelativeLayout>
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="0.3dp"
	                android:background="@color/h_line_bg"/>
	             <!-- 意见反馈 -->
	            <RelativeLayout 
	                android:id="@+id/setting_feedback_ll"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/_72px">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    android:textSize="18dp"
	                    android:text="@string/feedback"/>
	                <Button
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:paddingLeft="10dp"
				        android:paddingRight="15dp"
				        android:layout_alignParentRight="true"
						android:drawableRight="@drawable/list_arrowright_selector"
						android:text=""
						android:textColor="@color/title_green"
						android:background="@null"/>
	            </RelativeLayout>
            </LinearLayout>
            
            <Button 
			    android:id="@+id/setting_quit_btn"
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/_72px"
			    android:background="@drawable/white_item_bg"
			    android:layout_alignParentBottom="true"
			    android:text="退出当前账号"
			    android:textColor="@color/red"
			    android:layout_margin="10dp"/>
            
        </LinearLayout>
    </ScrollView>
	
</LinearLayout>
