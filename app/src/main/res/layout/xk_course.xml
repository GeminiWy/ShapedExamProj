<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/common_btn_selector2"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:layout_width="100dp" android:layout_height="130dp"
            android:layout_margin="10dp" android:id="@+id/course_image"
            android:scaleType="centerCrop"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/course_name_tv"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/course_image"
            android:layout_alignTop="@+id/course_image"/>
    <LinearLayout
            android:id="@+id/course_two_btn_ll"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/course_name_tv"
            android:layout_alignLeft="@+id/course_name_tv"
            android:layout_marginTop="10dp" >

        <Button
                android:id="@+id/xk_task_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/common_btn_selector"
                android:text="提交作业(1/2)"
                android:textSize="15dp"
                android:textColor="@color/white" />

        <Button
                android:id="@+id/warm_exam_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/common_btn_selector"
                android:text="继续答题(10/20)"
                android:textSize="15dp"
                android:textColor="@color/white" />
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textColor="@color/light_black" android:textSize="15dp"
            android:layout_toRightOf="@+id/course_image"
            android:layout_alignBottom="@+id/course_image" android:singleLine="true"
            android:layout_marginRight="10dp"
            android:ellipsize="middle" android:id="@+id/course_time_tv"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/border_color"
            android:layout_below="@+id/course_image"
            android:id="@+id/view"/>
</RelativeLayout>