<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginTop="54dp" android:gravity="center">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ll1">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2" android:src="@drawable/my_down_mphone"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/download_tip_text"
                    android:id="@+id/textView" android:gravity="left" android:textColor="#888888"
                    android:textSize="22dp" android:textIsSelectable="true" android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageView2"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/download_tip2_text"
                android:id="@+id/textView2" android:gravity="center" android:textSize="12dp"
                android:textColor="@color/chat_time_gray"
                android:layout_marginTop="7dp" android:layout_alignLeft="@+id/ll1" android:layout_below="@+id/ll1"/>
    </RelativeLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:src="@drawable/my_down_icon" android:scaleType="fitCenter"
            android:layout_marginTop="12dp"/>


</LinearLayout>