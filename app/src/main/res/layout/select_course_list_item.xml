<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical">

    <ImageView
            android:id="@+id/select_course_list_item_iv"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/default_cover_s"
            android:scaleType="centerCrop"/>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">
        <TextView
                android:id="@+id/select_course_list_item_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建建筑公车建"
                android:ellipsize="end"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        <Button
                android:id="@+id/select_course_list_item_exam_scheme_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/common_btn_selector"
                android:text="形考方案"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"/>
        <TextView
                android:id="@+id/select_course_list_item_study_time_tv"
                android:layout_above="@id/select_course_list_item_exam_scheme_btn"
                android:text="最短学习天数:45\n最短学习天数:45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="2dp"/>
    </RelativeLayout>
    <ImageButton
            android:id="@+id/select_course_list_item_select_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/image_select_indicate_selector"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_gravity="right|center_vertical"/>
</LinearLayout>