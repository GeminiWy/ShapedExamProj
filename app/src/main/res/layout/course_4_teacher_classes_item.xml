<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/teacher_classes_listview_item_height"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/course_classes_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法律文书"
            android:textColor="@color/black"
            android:textSize="16dp"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/teacher_studentscount_label"
                android:textColor="@color/light_black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/course_classes_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="594"
                android:textColor="@color/black"
                android:textSize="14dp" android:layout_marginLeft="5dp"/>
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>