<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_72px"
    android:background="@color/title_green"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/list_head_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/menu_leftbutton"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"  android:layout_weight="0.4">

        <TextView
            android:id="@+id/list_head_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/course_title"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="20dp" android:textIsSelectable="false" android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right" >

        <!--<ImageView
            android:id="@+id/list_head_history_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/clock1_1020"
            android:clickable="true"
            android:background="@drawable/null_foreground_button_selector"/>

        <ImageView
                android:id="@+id/list_head_right"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/download1_1020"
                android:clickable="true"
                android:background="@drawable/null_foreground_button_selector"/>-->
        <TextView
                android:id="@+id/common_main_head_new_lay_select_course_tv"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="选课"
                android:clickable="true"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>