<?xml version="1.0" encoding="utf-8"?>
<!-- 作业列表项的头部 -->
<LinearLayout 
    android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    >
	<RelativeLayout
         android:id="@+id/course_name_item"
         android:layout_width="match_parent"
         android:layout_height="@dimen/course_name_height"
         android:background="@color/transparent" >

         <com.tming.openuniversity.view.ScrollableTextView
             android:id="@+id/course_name_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:textColor="@color/black"
             style="@style/TVMarqueeStyle"
             android:textSize="16dp"
             android:layout_toLeftOf="@+id/list_arrowright"
             android:text="" />
         <ImageView
             android:id="@+id/list_arrowright"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:paddingRight="10dp"
             android:paddingLeft="10dp"
             android:src="@drawable/list_arrowright_selector" />
         <View 
             android:id="@+id/h_line"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="@color/h_line_bg"
             android:layout_alignParentBottom="true"/>
   	</RelativeLayout>
</LinearLayout>