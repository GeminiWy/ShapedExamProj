<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_btn_selector2"
        android:padding="10dp" >

        <TextView
            android:id="@+id/listen_course_history_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/listen_course_history_item_rate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listen_course_history_item_title_tv"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/light_black"
            android:textSize="12dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/listen_course_history_item_closed_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/classroom_icon_close"
        android:visibility="gone" />

</RelativeLayout>