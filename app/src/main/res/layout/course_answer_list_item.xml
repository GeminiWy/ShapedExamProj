<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="0.5dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_answer_rl"
        android:background="@color/white" >
        <TextView
            android:id="@+id/course_answer_list_item_question_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/arrow"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />
            
        
    </RelativeLayout>
    <View 
        android:layout_width="0.5dp"
        android:layout_height="50.5dp"
        android:visibility="gone"
        android:layout_alignLeft="@+id/course_answer_rl"
        android:background="@color/border_color"/>
    <View 
        android:layout_width="0.5dp"
        android:layout_height="50.5dp"
        android:layout_alignRight="@+id/course_answer_rl"
        android:visibility="gone"
        android:background="@color/border_color"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/course_answer_divider_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/course_answer_rl"
        android:background="@color/border_color"/>
</RelativeLayout>