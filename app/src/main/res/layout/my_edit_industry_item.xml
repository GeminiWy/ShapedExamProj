<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/myeditindustryitem_title_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/orange"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:text="工业"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/myeditindustryitem_decription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/myeditindustryitem_title_tv"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="计算机/互联网/通信"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/myeditindustryitem_radio_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/classroom_icon_radio1" />

    <View
        android:id="@+id/myeditphone_line_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/myeditindustryitem_title_tv"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/list_seperator_bg" />

</RelativeLayout>