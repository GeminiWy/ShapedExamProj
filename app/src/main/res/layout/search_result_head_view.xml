<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
	    android:id="@+id/search_all_head_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
	    <!-- 相关用户 -->
	    <TextView 
	        android:id="@+id/search_all_user_type_introduce_tv"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/_40px"        
	        android:text="@string/search_result_by_user"
	        android:textSize="@dimen/_16px"
	        android:textColor="@color/black"
	        android:gravity="center|left"
	        android:visibility="gone"/>
	   
	    <LinearLayout
	        android:id="@+id/search_all_user_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/_134px"
	        android:orientation="horizontal"
	        android:background="@drawable/playground_item_border"
	        android:visibility="gone">
	
	        <com.tming.openuniversity.view.search.HorizontalListView
	            android:id="@+id/search_all_user_content_hlv"
	            android:layout_width="0dp"
	            android:layout_height="@dimen/_134px"
	            android:layout_weight="1" 
	            android:divider="#00000000"
	            android:dividerHeight="8dp"/>
	         
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical" >
				<ImageView
	                android:id="@+id/all_user_type_search_result_iv"
	                android:layout_width="wrap_content"
	                android:layout_height="@dimen/_134px"
	                android:clickable="true"
	                android:src="@drawable/list_arrowright2" />
	            
	        </LinearLayout>
	    </LinearLayout>
	   
	    <!-- 相关专业 -->
	    <TextView 
	        android:id="@+id/search_all_specialty_type_introduce_tv"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/_40px"        
	        android:text="@string/search_result_by_specialty"
	        android:textSize="@dimen/_16px"
	        android:textColor="@color/black"
	        android:gravity="center|left"
	        android:visibility="gone" />
	   
	    <LinearLayout
	        android:id="@+id/search_all_specialty_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/_64px"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@drawable/playground_item_border"
	        android:visibility="gone">
	        
	        <com.tming.openuniversity.view.search.HorizontalListView
	            android:id="@+id/search_all_specialty_hlv"
	            android:layout_width="0dp"
	            android:layout_height="@dimen/_46px"     
	            android:layout_marginRight="8dp"   
	            android:layout_marginLeft="8dp"       
	            android:layout_weight="1" 
	            android:divider="#00000000"
	            android:dividerHeight="8dp"  />
	        
	        <ImageView
	            android:id="@+id/all_specialty_type_search_result_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/_64px" 
	            android:clickable="true"
	            android:src="@drawable/list_arrowright2" />
		 
	    </LinearLayout>
	             
	    <!-- 相关课程 -->
	    <TextView
	        android:id="@+id/search_all_course_type_introduce_tv"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/_40px"
	        android:gravity="center|left"
	        android:text="@string/search_result_by_course"
	        android:textColor="@color/black"
	        android:textSize="@dimen/_16px"
	        android:visibility="gone" />
	     
	     <LinearLayout
	        android:id="@+id/search_all_course_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/_111px"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical"
	        android:background="@drawable/playground_item_border"
	        android:visibility="gone">
	
	        <com.tming.openuniversity.view.search.HorizontalListView
	            android:id="@+id/search_all_course_hlv"
	            android:layout_width="0dp"
	            android:layout_height="@dimen/_111px"
	            android:layout_weight="1"  
	            android:divider="#00000000"/>
	        
	        <ImageView
	            android:id="@+id/all_course_type_search_result_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/_111px" 
	            android:clickable="true"
	            android:src="@drawable/list_arrowright2" />     
	    </LinearLayout>
	    <!-- android:layout_below="@+id/search_all_head_ll" -->
    <TextView
        android:id="@+id/search_all_pub_type_introduce_tv"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_40px"
        android:gravity="center|left" 
        android:text="@string/search_result_by_pub"
        android:textColor="@color/black"
        android:textSize="@dimen/_16px"
        android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
