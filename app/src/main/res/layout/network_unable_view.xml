<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/nonet_ll">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/nonet_tip_iv" android:src="@drawable/all_use_icon_noline" android:scaleType="fitCenter"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_net_click_tip"
            android:id="@+id/nonet_tip_tv" android:layout_gravity="center_horizontal" android:textSize="18dp"
            android:textColor="@color/left_menu_gray"/>
</LinearLayout>