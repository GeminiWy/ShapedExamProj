<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_72px"
    android:background="@color/title_green"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/commonheader_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/null_foreground_button_selector"
        android:clickable="true"
        android:padding="5dp"
        android:src="@drawable/actionbar_icon_back" />

    <LinearLayout
        android:id="@+id/commonheader_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/commonheader_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancem"
            android:textColor="@color/white"
            android:textSize="@dimen/_27px" />

        <ImageView
            android:id="@+id/commonheader_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6px"
            android:src="@drawable/up_arrow"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/common_head_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/null_foreground_button_pressed"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/finished"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

</RelativeLayout>