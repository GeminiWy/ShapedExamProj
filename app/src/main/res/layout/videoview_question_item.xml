<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/video_question_item_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/classroom_icon_kj_ask_2" />
    
    <TextView 
        android:id="@+id/video_question_item_desc_tv"
       	android:layout_alignTop="@id/video_question_item_icon_iv"
       	android:padding="2dp"
       	android:text=""
       	android:textColor="@color/white"
       	android:textSize="14sp"
       	android:layout_marginLeft="10dp"
       	android:layout_toRightOf="@id/video_question_item_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/video_question_item_icon_iv"
        android:layout_below="@id/video_question_item_desc_tv"
        android:id="@+id/video_question_item_date_tv"
        android:layout_width="fill_parent"
        android:text=""
        android:textColor="@color/list_seperator_bg"
        android:textSize="14sp"
        android:layout_height="wrap_content"/>
    
    <!-- <View 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/video_question_item_date_tv"
        android:layout_width="fill_parent"
        android:background="@color/list_seperator_bg"
        android:layout_height="0.5dp"/> -->

</RelativeLayout>