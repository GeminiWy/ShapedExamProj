<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/common_dialog_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
            android:id="@+id/common_simple_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dip"
            android:paddingBottom="5dp"
            android:textSize="18dp"
            android:text=""
            android:textColor="@color/black"/>
    <TextView android:id="@+id/common_simple_dialog_content_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="5dp"
              android:paddingBottom="10dp"
              android:paddingLeft="15dip"
              android:paddingRight="15dip"
              android:gravity="center_vertical|left"
              android:lineSpacingExtra="3dp"
              android:textSize="16sp"
              android:textColor="#757675"/>

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:layout_centerHorizontal="true"
                  android:gravity="center">


        <Button android:id="@+id/common_simple_dialog_negative_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/title_green"
                android:background="@drawable/dialog_btn_selector"
                android:gravity="center"
                android:layout_marginRight="-1dp"
                android:text="@string/cancel"/>

        <Button android:id="@+id/common_simple_dialog_positive_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/title_green"
                android:layout_marginLeft="-1dp"
                android:background="@drawable/dialog_btn_selector"
                android:gravity="center"
                android:text="@string/sure"/>
    </LinearLayout>

</LinearLayout>
