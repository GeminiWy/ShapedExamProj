<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <RelativeLayout
        android:id="@+id/error_question_item_rl"
        android:background="@drawable/common_btn_selector2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_76px"
        android:layout_marginTop="10dp"
        android:padding="10dp">
    <TextView
        android:id="@+id/error_question_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:lines="1"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/error_question_item_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/error_question_item_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/error_question_item_number_tv"
        android:text="累计错题："
        android:textColor="@color/light_black"
        android:textSize="14sp" />
</RelativeLayout>
</RelativeLayout>