<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!-- 课程详情页的课件列表项-->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:id="@+id/courseware_list_item"
        android:background="@drawable/common_btn_selector2">
        <com.tming.openuniversity.view.RoundProgressBar 
            android:id="@+id/courseware_list_item_play_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android_custom:roundColor="@color/light_black"
            android_custom:roundWidth="1dp"
            android_custom:style="FILL_AND_STROKE"
            android_custom:textIsDisplayable="false"
            android_custom:roundProgressColor="@color/title_green"/>
        <TextView
            android:id="@+id/courseware_list_item_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_toLeftOf="@+id/courseware_list_item_img_lay"
            android:layout_toRightOf="@+id/courseware_list_item_play_state"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:textSize="16dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""/>
        <RelativeLayout 
            android:id="@+id/courseware_list_item_img_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:clickable="false"
            android:background="@color/transparent"
            android:layout_alignParentRight="true">
	        <ImageView
	            android:id="@+id/courseware_list_item_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/btn_download_courseware"/>
	        <RelativeLayout 
	            android:id="@+id/courseware_list_item_waiting_rl"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:visibility="gone">
		        <ImageView 
		            android:id="@+id/courseware_list_item_wait_iv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="5dp"
		            android:src="@drawable/wait_1010"/>
		        <TextView 
		            android:id="@+id/courseware_list_item_wait_tv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:textSize="15dp"
		            android:layout_toRightOf="@+id/courseware_list_item_wait_iv"
		            android:text="@string/waiting"/>
	        </RelativeLayout>
	        <!-- 已下载或下载中 -->
	        <TextView 
	            android:id="@+id/courseware_list_item_right_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textSize="15dp"
	            android:visibility="gone"
	            android:text="@string/already_download"/>
        </RelativeLayout>
        <View 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/border_color"/>
        <View 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@color/border_color"/>
        <View 
            android:layout_width="match_parent"
            android:id="@+id/courseware_bottom_divider"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@color/border_color"/>
        <View 
            android:id="@+id/courseware_top_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:background="@color/border_color"/>
    </RelativeLayout>

</RelativeLayout>
