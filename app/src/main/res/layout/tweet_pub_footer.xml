<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/common_bottombar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
    <LinearLayout
        android:id="@+id/tweet_pub_title_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tweet_pub_viewpager_rl"
        android:layout_marginBottom="0.5dp"
        android:background="@color/chat_view_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

         <ImageView
            android:id="@+id/tweet_pub_footbar_face"
            style="@style/main_footbar_image"
            android:layout_gravity="center_vertical"
            android:src="@drawable/widget_bar_face" />

        <ImageView
            style="@style/main_footbar_cutline"
            android:src="@drawable/widget_bar_cut_off"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/tweet_pub_footbar_photo"
            style="@style/main_footbar_image"
            android:src="@drawable/widget_bar_face"
            android:visibility="invisible" />

        <ImageView
            style="@style/main_footbar_cutline"
            android:src="@drawable/widget_bar_cut_off"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/tweet_pub_footbar_atme"
            style="@style/main_footbar_image"
            android:src="@drawable/widget_bar_face"
            android:visibility="invisible" />

        <ImageView
            style="@style/main_footbar_cutline"
            android:src="@drawable/widget_bar_cut_off"
            android:visibility="invisible" />
        
        <ImageView
            android:id="@+id/tweet_pub_footbar_software"
            style="@style/main_footbar_image"
            android:src="@drawable/widget_bar_face"
            android:visibility="invisible" />
        
        <ImageView
            style="@style/main_footbar_cutline"
            android:src="@drawable/widget_bar_cut_off"
            android:visibility="invisible" />
        <ImageView
            style="@style/main_footbar_image"
            android:src="@drawable/widget_bar_face"
            android:visibility="invisible" />
        
    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:layout_above="@+id/tweet_pub_viewpager_rl"
	    android:background="#000000"/>
	<RelativeLayout 
	    android:id="@+id/tweet_pub_viewpager_rl"
	    android:layout_width="match_parent"
	    android:layout_height="200dp"
	    android:visibility="gone"
	    android:layout_alignParentBottom="true"
	    android:background="@color/chat_view_color">
	    <android.support.v4.view.ViewPager
	        android:id="@+id/tweet_pub_viewpager"
	        android:layout_alignParentBottom="true"
	        android:layout_width="match_parent"
	        android:layout_height="200dp" />
	    <LinearLayout 
		    android:id="@+id/smily_page_ll"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_marginBottom="10dp"
		    android:gravity="center"
		    android:orientation="horizontal">
   		</LinearLayout>	
	</RelativeLayout>

</RelativeLayout>