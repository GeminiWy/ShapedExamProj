<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/common_bg"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/question_detail_head_layout"
        layout="@layout/common_header" />

    <RelativeLayout
        android:id="@+id/question_detail_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_detail_head_layout"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/question_detail_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/classroom_icon_kj_ask_2" />

        <TextView
            android:id="@+id/question_detail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/question_detail_iv"
            android:text="MPACC与会计学硕士区别？" />
    </RelativeLayout>

    <TextView
        android:id="@+id/question_detail_question_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_detail_title_rl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="个人规划" />

    <RelativeLayout
        android:id="@+id/question_detail_turn_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_detail_question_tv"
        android:layout_margin="10dp" >

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/question_detail_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关联："
            android:textColor="@color/title_green"
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/question_detail_desc"
            android:text="《计算机组成原理》"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/myquestion_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@drawable/list_arrowright_selector" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" 
        android:layout_below="@id/question_detail_turn_rl"
        android:layout_width="fill_parent"
        android:background="@drawable/white_item_bg"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:id="@+id/question_detail_user_rl"
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/question_detail_photo_iv" 
                android:background="@color/blue"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            
            <TextView 
                android:layout_toRightOf="@id/question_detail_photo_iv"
                android:id="@+id/question_detail_name_tv"
                android:text="龚小玲"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView 
                android:layout_toRightOf="@id/question_detail_photo_iv"
                android:id="@+id/question_detail_teacher_tv"
                android:layout_below="@id/question_detail_name_tv"
                android:text="课程辅导老师"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            
            
        </RelativeLayout>
        
        
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@id/question_detail_user_rl"
            android:textSize="14sp"
            android:text="会计专业硕士就是专业硕士"
            android:id="@+id/question_detail_answer_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        
        
    </RelativeLayout>
    

</RelativeLayout>