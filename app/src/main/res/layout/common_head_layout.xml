<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_72px"
    android:background="@color/title_green"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/list_head_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/actionbar_icon_back"
            android:clickable="true"
            android:background="@drawable/null_foreground_button_selector"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.4"
        android:gravity="center">

        <TextView
            android:id="@+id/list_head_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="18sp" android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right" >

        <ImageView
            android:id="@+id/list_head_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/actionbar_icon_menu"
            android:clickable="true"
            android:background="@drawable/null_foreground_button_selector"/>
    </LinearLayout>

</LinearLayout>