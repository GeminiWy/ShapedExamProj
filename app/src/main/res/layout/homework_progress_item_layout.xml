<?xml version="1.0" encoding="utf-8"?>
<!-- 作业进度页，单种题型进度布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
         android:id="@+id/progress_title_rl"
         android:layout_width="match_parent"
         android:layout_height="@dimen/course_name_height"
         android:background="@color/transparent" >

         <TextView
             android:id="@+id/progress_title_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:textColor="@color/black"
             style="@style/TVSinglelineStyle"
             android:textSize="16dp"
             android:text="" />
   	</RelativeLayout>
   	<LinearLayout 
	    android:id="@+id/progress_tv_ll"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/transparent"
	    android:layout_below="@+id/progress_title_rl"
	    android:orientation="vertical" >

	</LinearLayout>

</RelativeLayout>
