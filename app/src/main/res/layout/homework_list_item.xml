<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_homework_rl"
    android:background="@drawable/common_btn_selector2"
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp" >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_homework_name"
        android:layout_marginBottom="5dp"
        android:textSize="18dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="作业名"/>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/item_homework_name"
	    android:layout_toLeftOf="@+id/item_homework_finishtime"
	    android:text="来源：《经济学原理》"
	    android:textSize="14dp"
	    android:singleLine="true"
	    android:ellipsize="middle"
	    android:textColor="@color/light_black"
	    android:id="@+id/item_homework_from"/>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
	    android:layout_alignBaseline="@+id/item_homework_from"
	    android:gravity="right"
	    android:singleLine="true"
	    android:textSize="14dp"
	    android:text="2014年09月01日 20:00"
	    android:textColor="@color/orange"
	    android:id="@+id/item_homework_finishtime"/>
	<!-- 待提交提示 -->
    <Button
        android:id="@+id/item_homework_icon"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/classroom_icon_homework1"
        android:paddingBottom="3dp"
        android:text="@string/is_to_commit"
        android:textColor="@color/white"
        android:textSize="11dp" />
	
</RelativeLayout>
