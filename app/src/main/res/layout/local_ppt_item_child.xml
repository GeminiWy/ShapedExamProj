<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!-- 本地课件列表项-->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:id="@+id/local_ppt_child"
        android:background="@color/white">
        <!-- android:background="@drawable/white_blue_selector" -->
        <TextView
            android:id="@+id/local_ppt_child_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_toLeftOf="@+id/local_ppt_more_layout"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text=""/>
        <!-- android:background="@drawable/white_pink_selector" -->
        <RelativeLayout 
            android:id="@+id/local_ppt_more_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:clickable="true"
            android:layout_alignParentRight="true">
	        <ImageView
	            android:id="@+id/local_ppt_child_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/list_dot_selector"/>
        </RelativeLayout>
        <View 
             android:id="@+id/h_seperator"
             android:layout_width="match_parent"
             android:layout_height="0.3dp"
             android:background="@color/list_seperator_bg"
             android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
