<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@color/common_bg">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="相关用户"
            android:id="@+id/search_rlv_header_text" android:textColor="@color/black" android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:textSize="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(4人)"
            android:id="@+id/search_rlv_header_count_text" android:textColor="@color/black"
            android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:textSize="16dp"/>
</LinearLayout>