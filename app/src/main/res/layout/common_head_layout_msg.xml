<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 通用返回头部 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:background="@color/title_green" >

        <!--
           android:src="@drawable/back_btn"
   	    android:background="@drawable/null_foreground_button_selector"
        -->

        <Button
            android:id="@+id/common_head_left_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/null_foreground_button_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/msg_contact_icon"
            android:paddingLeft="7dp"
            android:paddingRight="25dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@android:color/white" />
		<TextView 
		    android:id="@+id/common_head_center_tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/white"
		    android:textSize="20dp"
		    android:layout_centerInParent="true"
		    android:visibility="visible"
		    android:text="@string/msg_head"/>
		<LinearLayout
            android:id="@+id/online_status_title_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" 
            android:gravity="center" android:visibility="gone">
			<Button 
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:layout_weight="1"
			    android:id="@+id/common_head_msg_btn"
			    android:text="@string/msg_head"
			    android:textColor="@color/title_green"
			    android:background="@drawable/msg_msgbtn_on"/>
            <Button 
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:layout_weight="1"
			    android:id="@+id/common_head_contacts_btn"
			    android:text="@string/msg_communication_list"
			    android:textColor="@color/msg_head_contact_text"
			    android:background="@drawable/msg_contactbtn"/>
       	</LinearLayout>

        <Button
            android:id="@+id/common_head_right_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/null_foreground_button_selector"
            android:clickable="true"
            android:drawableRight="@drawable/msg_add_icon"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="7dp"
            android:textColor="@android:color/white"
                android:visibility="gone"/>

        <Button
            android:id="@+id/common_head_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/null_foreground_button_pressed"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/finished"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>