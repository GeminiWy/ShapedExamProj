<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_72px"
    android:background="@color/title_green"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" android:paddingRight="15dp">

        <ImageView
            android:id="@+id/list_head_left"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            
            android:src="@drawable/actionbar_icon_menu"
            android:clickable="true"
            android:background="@drawable/null_foreground_button_selector" android:scaleType="fitCenter"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.4"
        android:gravity="center" android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/list_head_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_title"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right" >

        <ImageView
            android:id="@+id/list_head_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/download1_1020"
            android:clickable="true"
            android:background="@drawable/null_foreground_button_selector"/>
    </LinearLayout>

</LinearLayout>