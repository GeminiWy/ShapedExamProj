<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:id="@+id/finished_homework_detail_item_ll"
        android:background="@drawable/common_btn_selector2">
    <TextView
            android:id="@+id/finished_homework_detail_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算机组成原理第一课时第一季计算机组成原理第一课时第一季"
            android:textSize="18dp"
            android:textColor="#333333"
            android:singleLine="true"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp">
        <TextView
                android:id="@+id/finished_homework_detail_item_subtitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="答题次数:2/8  最高分:40分"
                android:textColor="#888888"
                android:textSize="16dp"/>
        <TextView
                android:id="@+id/finished_homework_detail_item_score_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="待批改"
                android:gravity="right"
                android:textSize="16dp"
                android:textColor="#888888"/>
    </LinearLayout>
</LinearLayout>