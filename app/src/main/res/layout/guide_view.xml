<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <ImageView
        android:id="@+id/guide_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guide_pic_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_36px"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/guide_text_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide_iv"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/guide_titile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_60px"
           />

        <ImageView
            android:id="@+id/guide_line_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/guide_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_30px"
           />

    </LinearLayout>

    <ImageButton 
        android:id="@+id/guide_tomain_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide_text_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/guide_btn_selector"
        android:visibility="invisible"/>


</RelativeLayout>